<h3> Edit Ingredient </h3>

    <%= form_for @ingredient do |f| %>            
        
          <%= f.label :name%>
          <%= f.text_field :name %><br/><br>
      
          <%= f.label :quantity %>
          <%= f.number_field :quantity %><br/><br>

          <%= f.label :measurement %>
          <%= f.text_field :measurement %><br/><br>                   
   
      
        <%= f.submit %><br><br>
      <% end %>








    
     


