<% if @recipe %>
  <h1>Ingredients for <%= @recipe.title %></h1>
<% else %>
  <h1>All Ingredients</h1>
<% end %>



<ul>
    <% @ingredients.each do |i|%>
    <li>    Ingredient: <%= link_to i.name, ingredients_path %> Quantity: <%= i.quantity%> Measurement: <%= i.measurement%>  </li>
    <% end %>
</ul>






