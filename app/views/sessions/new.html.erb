<h1> Login </h1>

<%= flash[:message] if flash[:message] %><br><br>


<%=  form_for :user do |f|   %>

    <%= f.label :username %>:
    <%= f.email_field :username %><br><br>
    <%= f.label :email %>:
    <%= f.email_field :email %><br><br>
    <%= f.label :password %>:
    <%= f.password_field :password %><br><br>
    <%= f.submit "Login" %>

    <% end %> 