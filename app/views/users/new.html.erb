<h2> Signup to create a recipe </h2>

<%= render partial: "layouts/errors", locals: {object: @user} %>
<%= form_for(@user) do |f|%>
    
    <%= f.label :username %>
    <%= f.text_field :username %><br>
    <%= f.label :email %>
    <%= f.email_field :email %><br>
    <%= f.label :password %>
    <%= f.password_field :password %><br>
    <%= f.submit "Signup" %>

    <% end %> 