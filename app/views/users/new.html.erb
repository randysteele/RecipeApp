<h2> Signup to create a recipe </h2>

<%= render partial: "layouts/errors", locals: {object: @user} %>
<%= form_for(@user) do |f|%>
<div class="input-field">
    
    <%= f.text_field :username %><br>
    <%= f.label :username %>
</div>
<div class="input-field">
    <%= f.email_field :email %><br>
    <%= f.label :email %>
</div>
<div class="input-field">
    <%= f.password_field :password %><br>
    <%= f.label :password %>
    

    <input type="submit" value="Signup" class="btn light-blue">
</div>

    <% end %> 