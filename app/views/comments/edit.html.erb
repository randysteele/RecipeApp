<%= render partial: "layouts/errors", locals: {object: @comment} %>

<%= form_for(@comment) do |f|%>

    <%= f.label :recipe %>
    <%= f.collection_select :recipe_id, Recipe.all, :id, :title %>
  
    <%= f.label :content %>
    <%= f.text_field :content %>
  
  
    <%= f.submit "Edit Comment" %>
  
  <% end %>

  <%= link_to "Delete Comment", edit_comment_path(@comment)%>

        <%= form_tag comment_path(@comment.id), method: "delete" do %>
  <%= submit_tag "Delete #{@comment.content}" %>
<% end %>