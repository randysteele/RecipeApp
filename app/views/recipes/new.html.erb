<h1> Create A New Recipe </h1>

<%= form_for @recipe do |f| %>
        <%= f.label "Title:" %><br>
        <%= f.text_field :title %><br/>
      
        <%= f.fields_for :ingredients do |inner_form| %>
          <%= inner_form.label :Ingredient %>
          <%= inner_form.text_field :name %><br/><br>
      
          <%= inner_form.label :quantity %>
          <%= inner_form.number_field :quantity %><br/><br>

          <%= inner_form.label :measurement %>
          <%= inner_form.text_field :measurement %><br/><br>
        <% end %>

     
      
        <%= f.submit %>
      <% end %>